{
    "variables": {
        "aws_access_key": "",
        "aws_secret_key": ""
    },
    "builders": [{
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "region": "us-west-2",
        "source_ami_filter": {
            "filters": {
                "virtualization-type": "hvm",
                "name": "amzn-ami-hvm-*",
                "root-device-type": "ebs"
            },
            "owners": ["amazon"],
            "most_recent": true
        },
        "instance_type": "t2.micro",
        "ssh_username": "ec2-user",
        "ami_name": "web-base {{timestamp}}",
        "tags": {
            "Name": "web"
        }
    }],
    "provisioners": [{
        "type": "shell",
        "script": "./config.sh"
    }]
}